# Editorial Scripts Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=editorial_scripts
DB_USER=editorial
DB_PASSWORD=your-database-password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_DEFAULT_TTL=3600

# Browser Automation
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_POOL_SIZE=3
BROWSER_USE_STEALTH=true

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Journal Credentials
# SIAM (SICON, SIFIN)
ORCID_EMAIL=your-orcid-email
ORCID_PASSWORD=your-orcid-password

# ScholarOne (MF, MOR)
SCHOLARONE_EMAIL=your-scholarone-email
SCHOLARONE_PASSWORD=your-scholarone-password

# Gmail for 2FA
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000

# File Storage
DATA_DIR=data
PDF_DIR=data/pdfs
EXPORT_DIR=data/exports