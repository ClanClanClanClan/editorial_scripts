{
  "dashboard": {
    "title": "Editorial Command Center - Overview",
    "tags": ["ecc", "extractors"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Extraction Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(ecc_extractions_total{status=\"success\"}[5m]) / rate(ecc_extractions_total[5m])",
            "legendFormat": "Success Rate"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4}
      },
      {
        "title": "Total Manuscripts Extracted",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(ecc_manuscripts_total)",
            "legendFormat": "Total"
          }
        ],
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4}
      },
      {
        "title": "Extraction Duration (avg)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ecc_extraction_duration_seconds_sum[5m]) / rate(ecc_extraction_duration_seconds_count[5m])",
            "legendFormat": "{{journal}}"
          }
        ],
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 6}
      },
      {
        "title": "Manuscripts by Journal",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (journal) (ecc_manuscripts_total)",
            "legendFormat": "{{journal}}"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 6}
      },
      {
        "title": "Error Rate by Journal",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ecc_extractions_total{status=\"error\"}[5m])",
            "legendFormat": "{{journal}}"
          }
        ],
        "gridPos": {"x": 0, "y": 10, "w": 12, "h": 6}
      },
      {
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(fastapi_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ],
        "gridPos": {"x": 12, "y": 10, "w": 12, "h": 6}
      },
      {
        "title": "Database Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "Active"
          }
        ],
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4}
      },
      {
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m]))",
            "legendFormat": "Hit Rate"
          }
        ],
        "gridPos": {"x": 18, "y": 4, "w": 6, "h": 4}
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
